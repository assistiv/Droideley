<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent" android:layout_height="match_parent"
	android:orientation="vertical" android:background="@color/list_bg">

	<com.droideley.components.ActionBarWidget
		xmlns:app="http://schemas.android.com/apk/res/android" android:id="@+id/searchhub_bar"
		android:layout_width="fill_parent" android:layout_height="wrap_content"
		app:title="Search Hub" />
	<RelativeLayout android:layout_width="match_parent"
		android:layout_height="wrap_content" android:padding="3dp">
		<Button android:id="@+id/btnSearch" android:layout_width="wrap_content"
			android:layout_height="wrap_content" android:layout_alignParentRight="true"
			android:text="Search" />
		<EditText android:id="@+id/inputSearch" android:layout_width="match_parent"
			android:layout_height="wrap_content" android:layout_weight="1"
			android:padding="3dp" android:layout_toLeftOf="@id/btnSearch" />		
	</RelativeLayout>
	<ListView android:id="@android:id/list" android:layout_width="match_parent"
		android:layout_height="match_parent" android:background="@color/list_bg" />
</LinearLayout>
